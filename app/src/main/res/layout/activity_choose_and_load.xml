<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.dwks.thewrittenworld.ChooseAndLoad"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:outlineProvider="paddedBounds">


    <Spinner
        android:id="@+id/author_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:dropDownWidth="300dp"
        android:hapticFeedbackEnabled="true"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/search_title_box"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/titleSpinner"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/search_title_box"
        app:layout_constraintVertical_bias="0.39">

    </Spinner>

    <Spinner
        android:id="@+id/titleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="300dp"
        android:hapticFeedbackEnabled="true"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/author_dropdown"
        android:layout_marginBottom="87dp"
        app:layout_constraintBottom_toTopOf="@+id/InfoBox">

    </Spinner>


    <!--<Button-->
    <!--android:id="@+id/filter_author"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Filter By Author"-->
    <!--tools:layout_constraintTop_creator="1"-->
    <!--tools:layout_constraintRight_creator="1"-->
    <!--android:layout_marginEnd="16dp"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--android:layout_marginTop="19dp"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/textView"-->
    <!--android:layout_marginRight="16dp" />-->

    <AutoCompleteTextView
        android:id="@+id/search_title_box"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:focusedByDefault="false"
        android:hint="Search For A Book"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/loadPlaces"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.052"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/InfoBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Visited:"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/loadPlaces"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <ImageButton
        android:id="@+id/filter_author"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/quill"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/loadPlaces"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/loadPlaces"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/book_1"
        app:layout_constraintRight_toRightOf="@+id/filter_author"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_author" />

    <TextView
        android:id="@+id/selected_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:nestedScrollingEnabled="true"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/InfoBox"
        app:layout_constraintVertical_bias="0.014"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />


</android.support.constraint.ConstraintLayout>
