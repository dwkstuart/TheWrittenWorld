<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dwks.thewrittenworld.ChooseAndLoad"
    android:weightSum="1"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose which book from the dropdown"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/author_dropdown"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1" />

    <Spinner
        android:id="@+id/author_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="300dp"
        android:hapticFeedbackEnabled="true"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/loadPlaces"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintTop_toTopOf="parent">

    </Spinner>

    <Spinner
        android:id="@+id/titleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="300dp"
        android:hapticFeedbackEnabled="true"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toTopOf="parent">

    </Spinner>


    <TextView
        android:id="@+id/InfoBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Places Selected:"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/loadPlaces"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/loadPlaces"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ViewList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.79"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/loadPlaces"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Load the Locations from The Selected Book"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleSpinner"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/ViewMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:fontFamily="serif-monospace"
        android:text="View Map"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/createGeofences"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/createGeofences"
        app:layout_constraintVertical_bias="0.89"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/createGeofences"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:text="Start Notification"
        app:layout_constraintLeft_toLeftOf="@+id/ViewList"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/ViewList" />

    <Button
        android:id="@+id/removeGeofences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Alerts"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintLeft_toRightOf="@+id/createGeofences"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/ViewList"
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:text="Save and Load Tours"
        app:layout_constraintLeft_toLeftOf="@+id/InfoBox"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toBottomOf="@+id/loadPlaces"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/filter_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter By Author"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="16dp" />


</android.support.constraint.ConstraintLayout>
